{
  "expo": {
    "name": "SpeakEasy",
    "slug": "speakeasy",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "speakeasy",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.scott.speakeasy",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "SpeakEasy needs access to your microphone for voice conversation practice.",
        "NSSpeechRecognitionUsageDescription": "SpeakEasy uses speech recognition to help you practice pronunciation."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.speakeasy.app",
      "versionCode": 1,
      "permissions": [
        "RECORD_AUDIO"
      ],
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "extra": {
      "eas": {
      }
    },
    "runtimeVersion": {
      "policy": "sdkVersion"
    }
  }
}
